<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:layout_width="match_parent"
              android:layout_height="match_parent"
              android:gravity="center_vertical"
              android:minHeight="64dp"
              android:orientation="horizontal">
    <ImageView android:id="@+id/image"
               android:layout_width="45dp"
               android:layout_height="45dp"
               android:layout_marginLeft="@dimen/dip_12"
               android:gravity="center"
               android:scaleType="centerCrop"
               android:src="@drawable/icon_wb"></ImageView>

    <LinearLayout android:layout_width="0dp"
                  android:layout_height="wrap_content"
                  android:layout_marginLeft="12dp"
                  android:layout_marginRight="@dimen/dip_12"
                  android:layout_weight="1"
                  android:orientation="vertical">
        <TextView android:id="@+id/name_tv"
                  android:layout_width="wrap_content"
                  android:layout_height="wrap_content"
                  android:ellipsize="middle"
                  android:maxLines="1"
                  android:text="一个不怎么常用的杯子"
                  android:textColor="#333333"
                  android:textSize="@dimen/f_15"/>
        <TextView android:id="@+id/location_tv"
                  android:layout_width="wrap_content"
                  android:layout_height="wrap_content"
                  android:layout_marginTop="@dimen/dip_4"
                  android:ellipsize="middle"
                  android:maxLines="1"
                  android:paddingBottom="1dp"
                  android:paddingRight="8dp"
                  android:paddingTop="1dp"
                  android:text="客厅/茶几/左2"
                  android:textColor="#a3a7ae"
                  android:textSize="@dimen/f_12"/>
    </LinearLayout>

    <ImageView android:id="@+id/iv_location"
               android:layout_width="40dp"
               android:layout_height="40dp"
               android:scaleType="center"
               android:alpha="0.5"
               android:src="@drawable/icon_location"/>
</LinearLayout>