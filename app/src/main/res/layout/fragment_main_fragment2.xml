<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/colorf9"
    tools:context="com.gongwu.wherecollect.afragment.MainFragment1">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:fillViewport="true"
        android:scrollbars="none">
        <!--android:layout_marginTop="@dimen/title_hight"-->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="12dp"
            android:orientation="vertical"
            android:showDividers="middle">

            <LinearLayout
                android:id="@+id/head_layout"
                style="@style/person_details_layout_style">

                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="@dimen/dip_4"
                    android:layout_marginRight="@dimen/dip_12"
                    android:src="@drawable/icon_my_tx" />

                <RelativeLayout
                    android:layout_width="0dp"
                    android:layout_height="@dimen/dip_60"
                    android:layout_weight="1">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_centerVertical="true"
                        android:text="头像"
                        android:textColor="@color/black_54"
                        android:textSize="@dimen/f_16" />

                    <ImageView
                        android:id="@+id/person_iv"
                        android:layout_width="44dip"
                        android:layout_height="44dip"
                        android:layout_alignParentRight="true"
                        android:layout_centerVertical="true"
                        android:layout_marginRight="@dimen/dip_12"
                        android:src="@mipmap/ic_launcher" />

                    <View
                        android:layout_width="match_parent"
                        android:layout_height="2px"
                        android:layout_alignParentBottom="true"
                        android:background="@color/black_12"></View>
                </RelativeLayout>

            </LinearLayout>

            <LinearLayout
                android:id="@+id/nick_layout"
                style="@style/person_details_layout_style">

                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="@dimen/dip_4"
                    android:layout_marginRight="@dimen/dip_12"
                    android:src="@drawable/icon_my_nc" />

                <RelativeLayout
                    android:layout_width="0dp"
                    android:layout_height="@dimen/dip_45"
                    android:layout_weight="1">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_centerVertical="true"
                        android:text="昵称"
                        android:textColor="@color/black_54"
                        android:textSize="@dimen/f_16" />

                    <TextView
                        android:id="@+id/tv_nick"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignParentRight="true"
                        android:layout_centerVertical="true"
                        android:layout_marginRight="@dimen/dip_16"
                        android:text="赵进"
                        android:textColor="@color/black_87"
                        android:textSize="@dimen/f_15" />

                    <View
                        android:layout_width="match_parent"
                        android:layout_height="2px"
                        android:layout_alignParentBottom="true"
                        android:background="@color/black_12"></View>
                </RelativeLayout>

            </LinearLayout>

            <LinearLayout
                android:id="@+id/sex_layout"
                style="@style/person_details_layout_style">

                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="@dimen/dip_4"
                    android:layout_marginRight="@dimen/dip_12"
                    android:src="@drawable/icon_my_xb" />

                <RelativeLayout
                    android:layout_width="0dp"
                    android:layout_height="@dimen/dip_45"
                    android:layout_weight="1">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_centerVertical="true"
                        android:text="性别"
                        android:textColor="@color/black_54"
                        android:textSize="@dimen/f_16" />

                    <TextView
                        android:id="@+id/tv_sex"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignParentRight="true"
                        android:layout_centerVertical="true"
                        android:layout_marginRight="@dimen/dip_16"
                        android:text="男"
                        android:textColor="@color/black_87"
                        android:textSize="@dimen/f_15" />

                    <View
                        android:layout_width="match_parent"
                        android:layout_height="2px"
                        android:layout_alignParentBottom="true"
                        android:background="@color/black_12"></View>
                </RelativeLayout>

            </LinearLayout>

            <LinearLayout
                android:id="@+id/birth_layout"
                style="@style/person_details_layout_style">

                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="@dimen/dip_4"
                    android:layout_marginRight="@dimen/dip_12"
                    android:src="@drawable/icon_my_sr" />

                <RelativeLayout
                    android:layout_width="0dp"
                    android:layout_height="@dimen/dip_45"
                    android:layout_weight="1">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_centerVertical="true"
                        android:text="生日"
                        android:textColor="@color/black_54"
                        android:textSize="@dimen/f_16" />

                    <TextView
                        android:id="@+id/tv_birthday"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignParentRight="true"
                        android:layout_centerVertical="true"
                        android:layout_marginRight="@dimen/dip_16"
                        android:text="1987-12-18"
                        android:textColor="@color/black_87"
                        android:textSize="@dimen/f_15" />
                </RelativeLayout>

            </LinearLayout>

            <LinearLayout
                android:id="@+id/layout_roomrecord"
                android:layout_width="match_parent"
                android:layout_height="@dimen/dip_45"
                android:layout_marginTop="@dimen/dip_12"
                android:background="@drawable/select_white_bg"
                android:gravity="center_vertical"
                android:orientation="horizontal"
                android:paddingLeft="@dimen/dip_16"
                android:paddingRight="@dimen/dip_16">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:layout_marginBottom="2px"
                    android:gravity="center_vertical"
                    android:text="室迹通览"
                    android:textColor="@color/black_54"
                    android:textSize="@dimen/f_16" />

                <View
                    android:id="@+id/roomrecord_red"
                    android:layout_width="6dp"
                    android:layout_height="6dp"
                    android:layout_marginLeft="8dp"
                    android:background="@drawable/shape_circle_msg_count_red"></View>

                <View
                    android:layout_width="wrap_content"
                    android:layout_height="1px"
                    android:layout_weight="1"></View>

                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:src="@drawable/icon_next_black" />
            </LinearLayout>

            <TextView
                android:id="@+id/tv_detail"
                android:layout_width="match_parent"
                android:layout_height="@dimen/dip_45"
                android:layout_marginTop="@dimen/dip_12"
                android:background="@drawable/select_white_bg"
                android:drawableRight="@drawable/icon_next_black"
                android:gravity="center_vertical"
                android:paddingLeft="@dimen/dip_16"
                android:paddingRight="@dimen/dip_16"
                android:text="账号信息"
                android:textColor="@color/black_54"
                android:textSize="@dimen/f_16" />

            <TextView
                android:id="@+id/tv_loginOut"
                android:layout_width="match_parent"
                android:layout_height="@dimen/dip_45"
                android:layout_marginTop="30dp"
                android:background="@drawable/select_white_bg"
                android:gravity="center"
                android:text="退出登录"
                android:textColor="@color/holo_red_light"
                android:textSize="@dimen/f_17" />

            <TextView
                android:id="@+id/version_tv"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_horizontal"
                android:layout_marginBottom="80dp"
                android:layout_marginTop="16dp"
                android:textColor="@color/black_26"
                android:textSize="14sp" />
        </LinearLayout>
    </ScrollView>
</FrameLayout>
