<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@drawable/select_changheader_btn_other">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/dip_130"
        android:gravity="center_vertical"
        android:orientation="horizontal">

        <com.gongwu.wherecollect.view.GoodsImageView
            android:id="@+id/item_goods_iv"
            android:layout_width="@dimen/dip_100"
            android:layout_height="@dimen/dip_100"
            android:layout_marginLeft="@dimen/dip_15"
            android:layout_marginRight="@dimen/dip_15" />

        <TextView
            android:id="@+id/item_goods_name_tv"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:ellipsize="end"
            android:singleLine="true"
            android:text="自定义"
            android:textSize="@dimen/f_17" />

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginRight="@dimen/dip_16"
            android:src="@drawable/icon_next_black" />
    </LinearLayout>
</FrameLayout>
