<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_account_info"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context="com.gongwu.wherecollect.activity.AccountInfoActivity">

    <LinearLayout android:layout_width="match_parent"
                  android:layout_height="wrap_content"
                  android:layout_marginTop="@dimen/dip_20"
                  android:background="@color/white"
                  android:orientation="vertical">
        <RelativeLayout
            android:id="@+id/wx_layout"
            android:layout_width="match_parent"
            android:layout_height="@dimen/dip_44"
            android:layout_weight="1"
            android:background="@drawable/select_white_bg"
            android:paddingLeft="@dimen/dip_16"
            android:paddingRight="@dimen/dip_16">
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:drawableLeft="@drawable/icon_a_wx"
                android:drawablePadding="@dimen/dip_8"
                android:gravity="center"
                android:text="微信"
                android:textColor="@color/black_87"
                android:textSize="@dimen/f_15"/>
            <TextView
                android:id="@+id/tv_wx"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:layout_centerVertical="true"
                android:drawablePadding="@dimen/dip_16"
                android:drawableRight="@drawable/icon_next_black"
                android:text="未绑定"
                android:textColor="@color/black_87"
                android:textSize="@dimen/f_15"/>
        </RelativeLayout>
        <View android:layout_width="match_parent"
              android:layout_height="2px"
              android:layout_alignParentBottom="true"
              android:background="@color/black_12"></View>
        <RelativeLayout
            android:id="@+id/wb_layout"
            android:layout_width="match_parent"
            android:layout_height="@dimen/dip_44"
            android:layout_weight="1"
            android:background="@drawable/select_white_bg"
            android:paddingLeft="@dimen/dip_16"
            android:paddingRight="@dimen/dip_16">
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:drawableLeft="@drawable/icon_a_wb"
                android:drawablePadding="@dimen/dip_8"
                android:gravity="center"
                android:text="微博"
                android:textColor="@color/black_87"
                android:textSize="@dimen/f_15"/>
            <TextView
                android:id="@+id/tv_wb"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:layout_centerVertical="true"
                android:drawablePadding="@dimen/dip_16"
                android:drawableRight="@drawable/icon_next_black"
                android:text="未绑定"
                android:textColor="@color/black_87"
                android:textSize="@dimen/f_15"/>
        </RelativeLayout>
        <View android:layout_width="match_parent"
              android:layout_height="2px"
              android:layout_alignParentBottom="true"
              android:background="@color/black_12"></View>
        <RelativeLayout
            android:id="@+id/qq_layout"
            android:layout_width="match_parent"
            android:layout_height="@dimen/dip_44"
            android:layout_weight="1"
            android:background="@drawable/select_white_bg"
            android:paddingLeft="@dimen/dip_16"
            android:paddingRight="@dimen/dip_16">
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:drawableLeft="@drawable/icon_a_qq"
                android:drawablePadding="@dimen/dip_8"
                android:gravity="center"
                android:text="QQ"
                android:textColor="@color/black_87"
                android:textSize="@dimen/f_15"/>
            <TextView
                android:id="@+id/tv_qq"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:layout_centerVertical="true"
                android:drawablePadding="@dimen/dip_16"
                android:drawableRight="@drawable/icon_next_black"
                android:text="未绑定"
                android:textColor="@color/black_87"
                android:textSize="@dimen/f_15"/>
        </RelativeLayout>
        <View android:layout_width="match_parent"
              android:layout_height="2px"
              android:layout_alignParentBottom="true"
              android:background="@color/black_12"></View>
        <RelativeLayout
            android:id="@+id/email_layout"
            android:layout_width="match_parent"
            android:layout_height="@dimen/dip_44"
            android:layout_weight="1"
            android:background="@drawable/select_white_bg"
            android:paddingLeft="@dimen/dip_16"
            android:paddingRight="@dimen/dip_16">
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:drawableLeft="@drawable/icon_a_email"
                android:drawablePadding="@dimen/dip_8"
                android:gravity="center"
                android:text="邮箱"
                android:textColor="@color/black_87"
                android:textSize="@dimen/f_15"/>
            <TextView
                android:id="@+id/tv_email"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:layout_centerVertical="true"
                android:drawablePadding="@dimen/dip_16"
                android:drawableRight="@drawable/icon_next_black"
                android:text="未绑定"
                android:textColor="@color/black_87"
                android:textSize="@dimen/f_15"/>
        </RelativeLayout>
    </LinearLayout>

    <LinearLayout android:layout_width="match_parent"
                  android:layout_height="wrap_content"
                  android:layout_marginTop="@dimen/dip_20"
                  android:background="@color/white"
                  android:orientation="vertical">
        <RelativeLayout
            android:id="@+id/phone_layout"
            android:layout_width="match_parent"
            android:layout_height="@dimen/dip_44"
            android:layout_weight="1"
            android:background="@drawable/select_white_bg"
            android:paddingLeft="@dimen/dip_16"
            android:paddingRight="@dimen/dip_16">
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:drawableLeft="@drawable/icon_a_phone"
                android:drawablePadding="@dimen/dip_8"
                android:gravity="center"
                android:text="绑定手机"
                android:textColor="@color/black_87"
                android:textSize="@dimen/f_15"/>
            <TextView
                android:id="@+id/tv_phone"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:layout_centerVertical="true"
                android:drawablePadding="@dimen/dip_16"
                android:drawableRight="@drawable/icon_next_black"
                android:text="未绑定"
                android:textColor="@color/black_87"
                android:textSize="@dimen/f_15"/>
        </RelativeLayout>
        <View android:layout_width="match_parent"
              android:layout_height="2px"
              android:layout_alignParentBottom="true"
              android:background="@color/black_12"></View>
        <TextView android:id="@+id/tv_changePWD"
                  android:layout_width="match_parent"
                  android:layout_height="@dimen/dip_44"
                  android:background="@drawable/select_white_bg"
                  android:drawableLeft="@drawable/icon_a_pwd"
                  android:drawablePadding="@dimen/dip_8"
                  android:drawableRight="@drawable/icon_next_black"
                  android:gravity="center_vertical"
                  android:paddingLeft="@dimen/dip_16"
                  android:paddingRight="@dimen/dip_16"
                  android:text="修改密码"
                  android:textColor="@color/black_87"
                  android:textSize="@dimen/f_15"/>
    </LinearLayout>
</LinearLayout>
