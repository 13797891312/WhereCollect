<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="52dp"
    android:layout_alignParentBottom="true"
    android:background="@drawable/shape_main_tab"
    android:gravity="center_vertical"
    android:minHeight="52dp"
    android:orientation="horizontal">


    <LinearLayout
        android:layout_width="0dp"
        android:layout_height="match_parent"
        android:layout_weight="1"
        android:background="@color/white_76"
        android:gravity="center"
        android:orientation="vertical"
        android:paddingTop="2dp">

        <ImageView
            android:id="@+id/tab_img"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:scaleType="fitCenter"
            android:src="@drawable/icon_tab1_active" />

        <TextView
            android:id="@+id/tab_text"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:gravity="center_vertical"
            android:text="查看"
            android:textColor="@color/black_txt"
            android:textSize="@dimen/f_12" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="0dp"
        android:layout_height="match_parent"
        android:layout_weight="1"
        android:background="@color/white_76"
        android:gravity="center_horizontal"
        android:orientation="vertical"
        android:paddingTop="2dp"
        android:paddingEnd="@dimen/dip_40">

        <RelativeLayout
            android:layout_width="wrap_content"
            android:layout_height="match_parent">

            <LinearLayout
                android:id="@+id/linea_remind"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerInParent="true"
                android:gravity="center_horizontal"
                android:orientation="vertical">

                <ImageView
                    android:id="@+id/tab_img"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerInParent="true"
                    android:scaleType="fitCenter"
                    android:src="@drawable/icon_tab3_normal" />

                <TextView
                    android:id="@+id/tab_text"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:gravity="center_vertical"
                    android:text="提醒"
                    android:textColor="@color/black_txt"
                    android:textSize="@dimen/f_12" />
            </LinearLayout>

            <View
                android:id="@+id/my_remind"
                android:layout_width="@dimen/dip_6"
                android:layout_height="@dimen/dip_6"
                android:layout_marginTop="@dimen/dip_2"
                android:layout_toEndOf="@id/linea_remind"
                android:background="@drawable/shape_circle_msg_count_red"
                android:visibility="gone" />

        </RelativeLayout>
    </LinearLayout>

    <LinearLayout
        android:layout_width="0dp"
        android:layout_height="match_parent"
        android:layout_weight="1"
        android:background="@color/white_76"
        android:gravity="center"
        android:orientation="vertical"
        android:paddingStart="@dimen/dip_40"
        android:paddingTop="2dp">

        <ImageView
            android:id="@+id/tab_img"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:scaleType="fitCenter"
            android:src="@drawable/icon_tab4_normal" />

        <TextView
            android:id="@+id/tab_text"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:gravity="center_vertical"
            android:text="共享"
            android:textColor="@color/black_txt"
            android:textSize="@dimen/f_12" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="0dp"
        android:layout_height="match_parent"
        android:layout_weight="1"
        android:background="@color/white_76"
        android:gravity="center_horizontal"
        android:orientation="vertical"
        android:paddingTop="2dp">

        <RelativeLayout
            android:layout_width="wrap_content"
            android:layout_height="match_parent">

            <LinearLayout
                android:id="@+id/linea"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerInParent="true"
                android:gravity="center_horizontal"
                android:orientation="vertical">

                <ImageView
                    android:id="@+id/tab_img"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerInParent="true"
                    android:scaleType="fitCenter"
                    android:src="@drawable/icon_tab2_normal" />

                <TextView
                    android:id="@+id/tab_text"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:gravity="center_vertical"
                    android:text="我的"
                    android:textColor="@color/black_txt"
                    android:textSize="@dimen/f_12" />
            </LinearLayout>

            <View
                android:id="@+id/my_red"
                android:layout_width="7dp"
                android:layout_height="7dp"
                android:layout_marginTop="6dp"
                android:layout_marginRight="6dp"
                android:layout_toRightOf="@+id/linea"
                android:background="@drawable/shape_circle_msg_count_red"
                android:visibility="gone" />

        </RelativeLayout>
    </LinearLayout>


</LinearLayout>