<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto" xmlns:tools="http://schemas.android.com/tools"

    android:id="@+id/activity_record_share"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    android:gravity="center_horizontal"
    android:orientation="vertical"
    tools:context="com.gongwu.wherecollect.record.RecordShareActivity">
    <RelativeLayout android:id="@+id/bitmap_layout"
                    android:layout_width="260dp"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="20dp"
                    android:layout_weight="1">
        <android.support.v7.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_centerInParent="true"
            android:layout_marginBottom="4dp"
            android:layout_marginLeft="5dp"
            android:layout_marginRight="5dp"
            android:layout_marginTop="4dp"
            app:cardCornerRadius="4dp">
            <ImageView android:id="@+id/imageview"
                       android:layout_width="match_parent"
                       android:layout_height="match_parent"
                       android:scaleType="fitXY"/>
        </android.support.v7.widget.CardView>

    </RelativeLayout>
    <RelativeLayout android:id="@+id/layout"
                    android:layout_width="280dp"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="-20dp">
        <ImageView android:layout_width="wrap_content"
                   android:layout_height="wrap_content"
                   android:layout_alignParentRight="true"
                   android:src="@drawable/icon_checked"/>
    </RelativeLayout>
    <TextView android:id="@+id/type_tv"
              android:layout_width="wrap_content"
              android:layout_height="wrap_content"
              android:text="已保存到相册，及“我的-室迹通览”"
              android:textColor="#666666"
              android:textSize="14sp"/>
    <LinearLayout android:layout_width="match_parent"
                  android:layout_height="wrap_content"
                  android:layout_marginTop="32dp"
                  android:orientation="horizontal"
                  android:paddingLeft="@dimen/dip_16"
                  android:paddingRight="@dimen/dip_16">
        <LinearLayout android:id="@+id/wx_layout"
                      android:layout_width="wrap_content"
                      android:layout_height="wrap_content"
                      android:layout_weight="1"
                      android:gravity="center"
                      android:orientation="vertical">
            <TextView android:layout_width="wrap_content"
                      android:layout_height="wrap_content"
                      android:drawablePadding="-2dp"
                      android:drawableTop="@drawable/icon_share_wx"
                      android:gravity="center"
                      android:text="微信"
                      android:textColor="@color/black_26"
                      android:textSize="@dimen/f_11"/>
        </LinearLayout>
        <LinearLayout android:id="@+id/pyq_layout"
                      android:layout_width="wrap_content"
                      android:layout_height="wrap_content"
                      android:layout_weight="1"
                      android:gravity="center"
                      android:orientation="vertical">
            <TextView android:layout_width="wrap_content"
                      android:layout_height="wrap_content"
                      android:drawablePadding="-2dp"
                      android:drawableTop="@drawable/icon_share_pyq"
                      android:gravity="center"
                      android:text="朋友圈"
                      android:textColor="@color/black_26"
                      android:textSize="@dimen/f_11"/>
        </LinearLayout>
        <LinearLayout android:id="@+id/wb_layout"
                      android:layout_width="wrap_content"
                      android:layout_height="wrap_content"
                      android:layout_weight="1"
                      android:gravity="center"
                      android:orientation="vertical">
            <TextView android:layout_width="wrap_content"
                      android:layout_height="wrap_content"
                      android:drawablePadding="-2dp"
                      android:drawableTop="@drawable/icon_wb"
                      android:gravity="center"
                      android:text="微博"
                      android:textColor="@color/black_26"
                      android:textSize="@dimen/f_11"/>
        </LinearLayout>
        <LinearLayout android:id="@+id/qq_layout"
                      android:layout_width="wrap_content"
                      android:layout_height="wrap_content"
                      android:layout_weight="1"
                      android:gravity="center"
                      android:orientation="vertical">
            <TextView android:layout_width="wrap_content"
                      android:layout_height="wrap_content"
                      android:drawablePadding="-2dp"
                      android:drawableTop="@drawable/icon_qq"
                      android:gravity="center"
                      android:text="QQ"
                      android:textColor="@color/black_26"
                      android:textSize="@dimen/f_11"/>
        </LinearLayout>
        <LinearLayout android:id="@+id/qqzone_layout"
                      android:layout_width="wrap_content"
                      android:layout_height="wrap_content"
                      android:layout_weight="1"
                      android:gravity="center"
                      android:orientation="vertical">
            <TextView android:layout_width="wrap_content"
                      android:layout_height="wrap_content"
                      android:drawablePadding="-2dp"
                      android:drawableTop="@drawable/qq_share_zone"
                      android:gravity="center"
                      android:text="QQ空间"
                      android:textColor="@color/black_26"
                      android:textSize="@dimen/f_11"/>
        </LinearLayout>
        <LinearLayout android:id="@+id/xiangce_layout"
                      android:layout_width="wrap_content"
                      android:layout_height="wrap_content"
                      android:layout_weight="1"
                      android:gravity="center"
                      android:orientation="vertical">
            <TextView android:layout_width="wrap_content"
                      android:layout_height="wrap_content"
                      android:drawablePadding="-2dp"
                      android:drawableTop="@drawable/xiangce"
                      android:gravity="center"
                      android:text="保存相册"
                      android:textColor="@color/black_26"
                      android:textSize="@dimen/f_11"/>
        </LinearLayout>
    </LinearLayout>
    <TextView android:layout_width="wrap_content"
              android:layout_height="wrap_content"
              android:layout_marginBottom="24dp"
              android:layout_marginTop="24dp"
              android:text="-  分享窝的轻成长，孤芳不必再自赏  -"
              android:textColor="#666666"
              android:textSize="14sp"/>
</LinearLayout>
