<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:background="@drawable/shape_high_opinion"
    android:elevation="@dimen/dip_4"
    android:gravity="center"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:orientation="vertical"
        android:padding="@dimen/dip_24">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="如果喜欢,请给我们五星好评,我们会"
            android:textColor="@color/color333"
            android:textSize="@dimen/f_14" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="再接再厉,不放弃治疗~~~"
            android:textColor="@color/color333"
            android:textSize="@dimen/f_14" />

        <ImageView
            android:layout_width="@dimen/dip_100"
            android:layout_height="@dimen/dip_100"
            android:layout_marginTop="@dimen/dip_16"
            android:src="@drawable/icon_app" />
    </LinearLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="1px"
        android:background="@color/colorddd" />

    <TextView
        android:id="@+id/start_app_tv"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:padding="@dimen/dip_12"
        android:text="去好评,请坚强的活下去"
        android:textColor="@color/color333"
        android:textSize="@dimen/f_14" />

    <View
        android:layout_width="match_parent"
        android:layout_height="1px"
        android:background="@color/colorddd" />

    <TextView
        android:id="@+id/start_act_tv"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:padding="@dimen/dip_12"
        android:text="我要吐槽"
        android:textColor="@color/color333"
        android:textSize="@dimen/f_14" />

    <View
        android:layout_width="match_parent"
        android:layout_height="1px"
        android:background="@color/colorddd" />

    <TextView
        android:id="@+id/cancel_tv"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:padding="@dimen/dip_12"
        android:text="无视,默默地关掉"
        android:textColor="@color/color999"
        android:textSize="@dimen/f_14" />
</LinearLayout>