<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="@dimen/title_hight"
    android:background="@color/colorPrimary"
    android:gravity="center_vertical"
    android:minHeight="@dimen/title_hight"
    android:orientation="horizontal">

    <TextView
        android:id="@+id/title_tv"
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:layout_centerInParent="true"
        android:gravity="center_vertical"
        android:text="标题"
        android:textColor="@color/black_txt"
        android:textSize="@dimen/f_17" />

    <ImageButton
        android:id="@+id/back_btn"
        android:layout_width="@dimen/title_hight"
        android:layout_height="@dimen/title_hight"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:background="@drawable/select_white_bg"
        android:paddingRight="4dp"
        android:src="@drawable/back_icon"
        android:visibility="gone" />

    <TextView
        android:id="@+id/back_text"
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:background="@drawable/select_white_bg"
        android:drawableLeft="@drawable/back_icon"
        android:gravity="center_vertical"
        android:paddingLeft="4dp"
        android:paddingRight="8dp"
        android:text="暂存"
        android:textColor="@color/black_txt"
        android:textSize="@dimen/f_17"
        android:visibility="gone" />

    <TextView
        android:id="@+id/textBtn_left"
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:layout_alignParentLeft="true"
        android:background="@drawable/select_white_bg"
        android:gravity="center"
        android:paddingLeft="12dp"
        android:paddingRight="12dp"
        android:text="提交"
        android:textColor="@color/black_txt"
        android:textSize="@dimen/f_17"
        android:visibility="gone" />

    <View
        android:id="@+id/line_view"
        android:layout_width="1px"
        android:layout_height="match_parent"
        android:layout_toRightOf="@+id/back_btn"></View>

    <TextView
        android:id="@+id/textBtn"
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:layout_alignParentRight="true"
        android:background="@drawable/select_white_bg"
        android:gravity="center"
        android:paddingLeft="12dp"
        android:paddingRight="12dp"
        android:text="提交"
        android:textColor="@color/black_txt"
        android:textSize="@dimen/f_17"
        android:visibility="gone" />

    <ImageButton
        android:id="@+id/select_space_ib"
        android:layout_width="@dimen/title_hight"
        android:layout_height="@dimen/title_hight"
        android:layout_alignParentRight="true"
        android:background="@drawable/select_white_bg"
        android:src="@drawable/icon_confirm"
        android:visibility="gone" />

    <ImageButton
        android:id="@+id/cutlink_ib"
        android:layout_width="@dimen/title_hight"
        android:layout_height="@dimen/title_hight"
        android:layout_alignParentRight="true"
        android:background="@drawable/select_white_bg"
        android:src="@drawable/icon_cutlink"
        android:visibility="gone" />

    <ImageButton
        android:id="@+id/image_btn"
        android:layout_width="@dimen/title_hight"
        android:layout_height="@dimen/title_hight"
        android:layout_alignParentRight="true"
        android:background="@drawable/select_white_bg"
        android:src="@drawable/icon_menu"
        android:visibility="gone" />

    <TextView
        android:id="@+id/add_share_tv"
        android:layout_width="@dimen/dip_48"
        android:layout_height="@dimen/dip_48"
        android:layout_alignParentRight="true"
        android:background="@drawable/select_white_bg"
        android:gravity="center"
        android:text="+"
        android:textColor="@color/color666"
        android:textSize="@dimen/f_23"
        android:visibility="gone" />
</RelativeLayout>