<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
                android:layout_width="70dp"
                android:layout_height="70dp"
                android:orientation="vertical"
                android:padding="1dp">
    <ImageView android:id="@+id/item_image"
               android:layout_width="match_parent"
               android:layout_height="match_parent"
               android:background="@color/windowsbg"
               android:scaleType="centerCrop"
               android:src="@drawable/icon_camera"/>
    <ImageView android:id="@+id/delete_image"
               android:layout_width="@dimen/dip_24"
               android:layout_height="@dimen/dip_24"
               android:layout_alignRight="@+id/item_image"
               android:background="@drawable/icon_del_red"
               android:visibility="gone"/>
</RelativeLayout>